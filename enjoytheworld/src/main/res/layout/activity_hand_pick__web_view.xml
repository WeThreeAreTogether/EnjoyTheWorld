<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.three.enjoytheworld.HandPick_WebViewActivity">

    <RelativeLayout
        android:id="@+id/handpick_web_layout_1"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/handpick_web_img_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_action_back"
            android:onClick="imgBackOnClick"/>

        <TextView
            android:id="@+id/handpick_web_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="title"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/handpick_web_img_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_action_share_grey" />
    </RelativeLayout>
    <WebView
        android:padding="5dp"
        android:layout_below="@id/handpick_web_layout_1"
        android:id="@+id/handpick_web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></WebView>
</RelativeLayout>
