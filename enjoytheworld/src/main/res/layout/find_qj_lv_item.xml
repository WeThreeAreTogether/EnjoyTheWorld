            <!--android:layout_width="40dp"-->
            <!--android:layout_height="2dp"-->
            <!--android:background="#ffffff"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:layout_gravity="center"-->
            <!--&gt;</View>-->
    </LinearLayout>
</FrameLayout>