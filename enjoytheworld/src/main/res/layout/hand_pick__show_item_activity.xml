<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.three.enjoytheworld.HandPick_ShowItem_Activity">
<ImageView
    android:id="@+id/handpick_showitem_img_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@mipmap/img_back_download_error"/>
    <RelativeLayout
        android:layout_below="@id/handpick_showitem_img_1"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/handpick_showitem_text_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/handpick_showitem_text_2"
            android:layout_below="@id/handpick_showitem_text_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tiime"
            android:textSize="20sp"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
