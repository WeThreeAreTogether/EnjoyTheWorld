<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/handpick_item_1_img_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/img_back_download_error" />

    <RelativeLayout
        android:id="@+id/handpick_item_1_layout_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="#44cccccc">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/handpick_item_1_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="title"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/handpick_item_1_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/handpick_item_1_text_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="type/time"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/handpick_item_1_text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/handpick_item_1_text_2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:background="#55cccccc"
                android:padding="3dp"
                android:text="describe"
                android:textSize="15sp" />
        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>